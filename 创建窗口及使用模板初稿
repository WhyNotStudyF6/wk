import tkinter as tk
import random
import screeninfo

def chuangjian_chuangkou(chuangkou_mingcheng, chuangkou_weizhi="默认", chuangkou_daxiao="默认", chuangkou_zhiding=False, chuangkou_lashen="不拉伸"):
    """
    🏗️ 创建一个高度可定制的Tkinter窗口
    
    📌 参数说明:
    ----------------------------
    chuangkou_mingcheng: str
        🏷️ 窗口名称/标题 - 显示在窗口顶部的名称
        🌐 范围: 任意字符串，建议长度不超过50个字符
        🌟 示例: "我的应用", "数据分析工具" 等
        
    chuangkou_weizhi: str/tuple
        📍 窗口位置 - 首次打开窗口时窗口的位置,支持以下格式:
        🎯 坐标形式: "数字*数字" 如 "300*200"
        📊 百分比形式: "百分比*百分比" 如 "50%*30%"
        🔢 单百分比: "百分比" 如 "50%" (相当于"50%*50%")
        🔑 关键词形式: 
            "默认"→居中 | "左上" | "右上" | "左下" | "右下" 
            "居中" | "上中" | "下中" | "左中" | "右中"
            "偏左上" | "偏右上" | "偏左下" | "偏右下"
            "随机"→随机位置
        ⚠️ 注意: 
        - 数字坐标范围: 0 ≤ x ≤ 屏幕宽度, 0 ≤ y ≤ 屏幕高度
        - 百分比范围: 1% ~ 100%
        
    chuangkou_daxiao: str/tuple
        📏 窗口大小 - 支持以下格式:
        📐 尺寸形式: "数字*数字" 如 "800*600"
        📈 百分比形式: "百分比*百分比" 如 "80%*60%"
        🔢 单百分比: "百分比" 如 "70%" (相当于"70%*70%")
        🔑 关键词形式:
            "默认"→居中半屏 | "最大化"→全屏
            "左半屏" | "右半屏" | "上半屏" | "下半屏"
            "居中半屏"→宽高各半屏
        ⚠️ 注意:
        - 最小尺寸限制: 100*100像素
        - 百分比范围: 10% ~ 100%
        
    chuangkou_zhiding: bool
        📌 窗口置顶 - 是否保持在最上层
        ✅ True: 置顶 | ❌ False: 不置顶
        🔄 运行时可通过window.attributes('-topmost', True/False)动态修改
        
    chuangkou_lashen: str
        🏋️ 窗口拉伸方式:
        "不拉伸"→固定大小 | "任意拉伸"→自由调整
        "按比例拉伸"→保持宽高比调整
        ⚠️ 注意: 
        - 选择"按比例拉伸"时，窗口初始大小决定宽高比
        - "最大化"窗口时建议选择"不拉伸"
        
    🎁 返回值: tk.Tk 窗口对象
    """
    
    # 获取屏幕尺寸 🖥️
    screen = screeninfo.get_monitors()[0]
    screen_width = screen.width
    screen_height = screen.height
    
    # 创建窗口 🏗️
    window = tk.Tk()
    window.title(f"{chuangkou_mingcheng}")
    
    # 处理窗口位置 📍
    def chuli_weizhi(weizhi):
        # 处理数字*数字 或 百分比*百分比 或 单百分比
        if isinstance(weizhi, str):
            if '*' in weizhi:
                left, top = weizhi.split('*')
            else:
                left = top = weizhi
            
            if '%' in left:
                left = max(1, min(100, int(left[:-1]))) / 100 * screen_width
                top = max(1, min(100, int(top[:-1]))) / 100 * screen_height
            else:
                left = max(0, min(screen_width, int(left)))
                top = max(0, min(screen_height, int(top)))
            return f"+{int(left)}+{int(top)}"
        
        # 处理关键词位置
        weizhi_dict = {
            "默认": (screen_width//2, screen_height//2),
            "左上": (0, 0),
            "右上": (screen_width, 0),
            "左下": (0, screen_height),
            "右下": (screen_width, screen_height),
            "居中": (screen_width//2, screen_height//2),
            "上中": (screen_width//2, 0),
            "下中": (screen_width//2, screen_height),
            "左中": (0, screen_height//2),
            "右中": (screen_width, screen_height//2),
            "偏左上": (screen_width//4, screen_height//4),
            "偏右上": (screen_width*3//4, screen_height//4),
            "偏左下": (screen_width//4, screen_height*3//4),
            "偏右下": (screen_width*3//4, screen_height*3//4),
            "随机": (random.randint(0, screen_width), random.randint(0, screen_height))
        }
        left, top = weizhi_dict.get(weizhi, weizhi_dict["默认"])
        return f"+{left}+{top}"
    
    # 处理窗口大小 📏
    def chuli_daxiao(daxiao):
        # 处理数字*数字 或 百分比*百分比 或 单百分比
        if isinstance(daxiao, str):
            if '*' in daxiao:
                width, height = daxiao.split('*')
            else:
                width = height = daxiao
            
            if '%' in width:
                width = max(10, min(100, int(width[:-1]))) / 100 * screen_width
                height = max(10, min(100, int(height[:-1]))) / 100 * screen_height
            else:
                width = max(100, min(screen_width, int(width)))
                height = max(100, min(screen_height, int(height)))
            return f"{int(width)}x{int(height)}"
        
        # 处理关键词大小
        daxiao_dict = {
            "默认": (screen_width//2, screen_height//2),
            "最大化": (screen_width, screen_height),
            "左半屏": (screen_width//2, screen_height),
            "右半屏": (screen_width//2, screen_height),
            "上半屏": (screen_width, screen_height//2),
            "下半屏": (screen_width, screen_height//2),
            "居中半屏": (screen_width//2, screen_height//2)
        }
        width, height = daxiao_dict.get(daxiao, daxiao_dict["默认"])
        return f"{width}x{height}"
    
    # 设置窗口几何属性 ✨
    window.geometry(f"{chuli_daxiao(chuangkou_daxiao)}{chuli_weizhi(chuangkou_weizhi)}")
    
    # 设置窗口置顶 📌
    if chuangkou_zhiding:
        window.attributes('-topmost', True)
    
    # 设置窗口拉伸方式 🏋️
    if chuangkou_lashen == "不拉伸":
        window.resizable(False, False)
    elif chuangkou_lashen == "按比例拉伸":
        # 保持宽高比 🔄
        width, height = map(int, window.geometry().split('+')[0].split('x'))
        aspect_ratio = width / height
        
        def enforce_aspect_ratio(event):
            if event.widget != window:
                return
            new_width = event.width
            new_height = int(new_width / aspect_ratio)
            window.geometry(f"{new_width}x{new_height}")
        
        window.bind("<Configure>", enforce_aspect_ratio)
    
    return window




# 创建窗口使用模板
# 导入创建窗口模块 🧩
from chuangjian_chuangkou_module import chuangjian_chuangkou

# 🌟 参数定义区 🌟
# ----------------------------
窗口名称 = "🟥智能数据分析看板 📊🔲✍️"  
# 🏷️ 窗口名称 (必填) - 显示在窗口顶部的名称
# 🌐 范围: 任意字符串，建议长度≤50字符
# 💡 示例: "我的应用", "系统监控面板"

窗口位置 = "🟥默认🔲✍️"  
# 📍 窗口位置 (可选，默认"居中") - 首次打开窗口时窗口的位置,支持以下格式:
# 🎯 格式选项:
# 1. "左边距*上边距" → 如 "300*200" (同时也是窗口左上角坐标,单位像素px)
# 2. "百分比*百分比" → 如 "50%*30%" (左边距与上边距占屏幕百分比)
# 3. "单百分比" → 如 "50%" (相当于"50%*50%")
# 4. 位置关键词 → "默认/左上/右上/左下/右下/居中/上中/下中/左中/右中/偏左上/偏右上/偏左下/偏右下/随机"
# ⚠️ 参数范围:
# - 左边距与上边距: 0 ≤ x ≤ 屏幕宽度, 0 ≤ y ≤ 屏幕高度
# - 百分比: 1% ~ 100%

窗口大小 = "🟥默认🔲✍️"      
# 📏 窗口大小 (可选，默认"居中半屏")
# 📐 格式选项:
# 1. "宽*高" → 如 "800*600" (窗口尺寸,单位像素px)
# 2. "百分比*百分比" → 如 "80%*60%" (宽和高占屏幕百分比)
# 3. "百分比" → 如 "70%" (相当于"70%*70%")
# 4. 大小关键词 → "默认/最大化/左半屏/右半屏/上半屏/下半屏/居中半屏"
# ⚠️ 限制:
# - 最小尺寸: 100*100像素
# - 百分比: 10% ~ 100%

窗口置顶 = 🟥True🔲✍️             
# 📌 窗口置顶 (可选参数，默认False) - 是否保持在最上层
# ✅ True: 窗口保持在最上层
# ❌ False: 正常窗口层级
# 💡 可通过window.attributes('-topmost', True/False)动态修改

窗口拉伸 = "🟥按比例拉伸🔲✍️"        
# 🏋️ 窗口拉伸方式 (可选参数，默认"不拉伸")
# 可选值:
# "不拉伸" → 固定窗口大小
# "任意拉伸" → 自由调整窗口尺寸
# "按比例拉伸" → 保持初始宽高比调整
# ⚠️ 注意:
# - "最大化"窗口时建议不选择"任意拉伸"
# - "按比例拉伸"时初始大小决定宽高比

# 🚀 创建窗口 - 前面变量app为自定义窗口名,用于指代窗口对象,可修改
🟥app🔲✍️ = chuangjian_chuangkou(
    chuangkou_mingcheng=窗口名称,
    chuangkou_weizhi=窗口位置,
    chuangkou_daxiao=窗口大小,
    chuangkou_zhiding=窗口置顶,
    chuangkou_lashen=窗口拉伸
)

# 🏃‍♂️ 启动窗口，（也叫主事件循环，窗口一直等待用户输入或点击等动作/事件）
# ⚠️ 注意: 启动窗口这个语句要写在最下面，不然其他语句会被忽略而无法执行
🟥app🔲✍️.mainloop()  # 变量app要与创建窗口时使用的变量名保持一致,此变量名用于指代窗口对象
